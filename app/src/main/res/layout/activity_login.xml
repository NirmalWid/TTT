<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="307dp"
        android:layout_height="195dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_574780056_tt" />

    <com.example.qr_scanner.CustomEditText
        android:id="@+id/editTextText"
        android:layout_width="327dp"
        android:layout_height="66dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:ems="10"
        android:hint="       User Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <com.example.qr_scanner.CustomEditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="329dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:ems="10"
        android:hint="    •••••••••"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <Button
        android:id="@+id/log"
        android:layout_width="170dp"
        android:layout_height="68dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#006E6C"
        android:fontFamily="@font/sitka"
        android:text="Login"
        android:textSize="24sp"
        app:layout_anchor="@+id/editTextText"
        app:layout_anchorGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/corbeli"
        android:text="Don't have an account? Sign Up"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log" />

</androidx.constraintlayout.widget.ConstraintLayout>