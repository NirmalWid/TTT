<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utils.TrainReg">

    <com.example.qr_scanner.utils.CustomEditText
        android:id="@+id/editTextText4"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:ems="10"
        android:inputType="text"
        app:customHintText="   Train Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.example.qr_scanner.utils.CustomEditText
        android:id="@+id/editTextText5"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:ems="10"
        android:inputType="number"
        app:customHintText="   Train Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText4" />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:spinnerMode="dropdown"
        app:customHintText="   Train Line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <com.example.qr_scanner.utils.CustomEditText
        android:id="@+id/editTextText8"
        android:layout_width="293dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:ems="10"
        android:inputType="text"
        app:customHintText="   Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <com.example.qr_scanner.utils.CustomEditText
        android:id="@+id/editTextText9"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:ems="10"
        android:inputType="text"
        app:customHintText="   Destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText8" />

    <Button
        android:id="@+id/button5"
        android:layout_width="142dp"
        android:layout_height="62dp"
        android:backgroundTint="#006D6E"
        android:text="Next"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText9"
        app:layout_constraintVertical_bias="0.375" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="#ADDAD9"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/castoro"
        android:text="Register Trains"
        android:textColor="#006D6E"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>