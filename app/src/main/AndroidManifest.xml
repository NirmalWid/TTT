<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/sri_lanka_railway_logo"
        android:label="Admin App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QR_scanner"
        tools:targetApi="31">
        <activity
            android:name=".utils.SignUp"
            android:exported="false" />
        <activity
            android:name=".utils.Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.QR_scanner" />
        <activity
            android:name=".utils.Scanner"
            android:exported="false" />
        <activity
            android:name=".utils.TrainReg"
            android:exported="false" />
        <activity
            android:name=".utils.Checker"
            android:exported="false" />
        <activity
            android:name=".utils.Roles"
            android:exported="false" />
        <activity
            android:name=".utils.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>